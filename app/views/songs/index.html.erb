<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Composer</th>
        <th>Tempo</th>
        <th>Key</th>
        <th>Scale</th>
        <th>Score</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @songs.each do |song| %>
        <tr>
          <td><%= song.title %></td>
          <td><%= song.composer %></td>
          <td><%= song.tempo %></td>
          <td><%= song.key %></td>
          <td><%= song.scale %></td>
          <td><%= song.score %></td>
          <td class="text-center"><%= link_to 'Show', song, class: 'btn btn-success' %></td>
          <td class="text-center"><%= link_to 'Edit', edit_song_path(song), class: 'btn btn-primary' %></td>
          <td class="text-center"><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="text-center">
  <%= link_to 'New Song', new_song_path, class: "btn btn-info" %>
</div>
